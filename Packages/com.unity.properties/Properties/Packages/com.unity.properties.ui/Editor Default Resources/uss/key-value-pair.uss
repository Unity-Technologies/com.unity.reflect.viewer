.unity-properties__key-value-pair
{
  border-radius: 5px;
  border-width: 2px;
  margin-bottom: 3px;
  margin-left: -15px;
  border-color: var(--collection-item__border);
}

.unity-properties__key-value-pair__key-root
{
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  margin-bottom: 2px;
  padding-left:15px;
}

.unity-properties__key-value-pair__key
{
}

.unity-properties__key-value-pair__value-root
{
  background-color: var(--collection-item__content);
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
  padding-bottom:2px;
  padding-left:15px;
}

.unity-properties__key-value-pair__key-root
{
  background-color: var(--collection-item__top-line-color);
  flex-direction: row;
}

.unity-properties__key-value-pair__key
{
  flex-grow:1;
}

.unity-properties__key-value-pair__remove-key-button
{
  background-color: transparent;
  background-image: var(--remove-button);
  border-width: 0;
  max-height: 16px;
  max-width: 16px;
}
