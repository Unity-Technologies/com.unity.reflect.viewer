.unity-properties__pagination-element__root {
    border-width: 1px;
    flex-direction: row;
    height:20px;
    margin-bottom: 2px;
    margin-left: -15px;
    padding-left:15px;
}

.unity-properties__pagination-element__show-label {
    align-self: center;
}

.unity-properties__pagination-element__pagination-sizes {
    border-color: black;
    border-right-width: 1px;
    margin-right: 3px;
    width: 75px;
}

.unity-properties__pagination-element__repeat-button
{
    background-color: transparent;
    border-bottom-width: 0;
    border-color: black;
    border-left-width: 1px;
    border-radius: 0;
    border-right-width: 1px;
    border-top-width: 0;
    margin-bottom: 0;
    margin-top: 0;
    width:20px;
}

.unity-properties__pagination-element__elements-range
{
    background-color: transparent;
    border-width: 0;
    flex-grow: 1;
}

.unity-properties__pagination-element__elements-range-input-root
{
    flex-direction: column;   
}

.unity-properties__pagination-element__elements-range-input
{
    align-self: center;
    flex-grow: 1;
    max-width: 80px;
}

.unity-properties__pagination-element__root
{
    border-color: var(--pagination-border-color);
}

.unity-properties__pagination-element__pagination-sizes
{
    border-color: var(--pagination-border-color);
}

.unity-properties__pagination-element__repeat-button
{
    border-color: var(--pagination-border-color);
}

.unity-properties__pagination-element__previous-page-button
{
    background-image: var(--previous-button);
}

.unity-properties__pagination-element__previous-page-button:hover
{
    background-image: var(--previous-button--selected);
}

.unity-properties__pagination-element__next-page-button
{
    background-image: var(--next-button);
}

.unity-properties__pagination-element__next-page-button:hover 
{
    background-image: var(--next-button--selected);
}
