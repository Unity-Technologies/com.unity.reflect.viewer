.unity-properties__variables
{
    /* Colors */
    --collection-item__top-line-color:#AAAAAA;
    --collection-item__content:#C8C8C8;
    --collection-item__border:#CDCDCD;

    --new-key-item__color:#6495ED;

    --pagination-border-color:#AAAAAA;
    
    /* Textures */
    --remove-button: resource("Packages/com.unity.properties.ui/Editor Default Resources/icons/light/Close S.png");
    --error-icon: resource("Packages/com.unity.properties.ui/Editor Default Resources/icons/light/Error.png");
    --previous-button: resource("Packages/com.unity.properties.ui/Editor Default Resources/icons/light/PreviousButton.png");
    --next-button: resource("Packages/com.unity.properties.ui/Editor Default Resources/icons/light/NextButton.png");
    --circular-reference-icon: resource("Packages/com.unity.properties.ui/Editor Default Resources/icons/light/CircularReference.png");
    --add-icon: resource("Packages/com.unity.properties.ui/Editor Default Resources/icons/light/Add.png");
}

.unity-properties__highlight
{
    border-left-color: darkblue;
    border-left-width: 2px;
    border-bottom-left-radius: 3px;
    border-top-left-radius: 3px;
}